2nd question


#include <stdio.h>
#include <stdlib.h>

int main(void) {
	float score;
	setbuf(stdout,NULL);
	printf("enter your score");
	scanf("%f",score);
	if(score<90){printf("A");}
	else if (80<score<89){printf("B");}
	else if (70<score<79){printf("C");}
	else if (60<score<69){printf("D");}
	else if (50<score<59){printf("E");}
	else (printf("fails"));
	 /* prints !!!Hello World!!! */
	return EXIT_SUCCESS;
}
